@import "../movie-item/movie-item-tpl.wxss";

.movie-list-container {
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.inner-container {
  margin: 0 auto20rpx;
}

.movie-head {
  padding: 30rpx 20rpx 22rpx;
}

.more {
  float: right;
}

.more-text {
  vertical-align: middle;
  margin-right: 10rpx;
  color: #4a6141;
}

.more-img {
  width: 9rpx;
  height: 16rpx;
  vertical-align: middle;
}

.slogan {
  font-size: 24rpx;
}

.movies-container {
  display: flex;
  flex-direction: row;
}
